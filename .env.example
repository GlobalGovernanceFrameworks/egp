# EGP Node Configuration
# Copy this file to .env and configure for your environment

# Node Configuration
NODE_ENV=development
PORT=3000
NODE_ID=egp-node-local-001
LOG_LEVEL=info

# IPFS Configuration
# Local IPFS node (default)
IPFS_API_URL=http://127.0.0.1:5001

# Infura IPFS (backup/production)
# Get these from https://infura.io/
INFURA_PROJECT_ID=your_infura_project_id
INFURA_PROJECT_SECRET=your_infura_project_secret

# Authentication & Security
# For production deployments
JWT_SECRET=your_jwt_secret_here
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Database (future)
# DATABASE_URL=postgresql://user:password@localhost:5432/egp_node

# Monitoring & Observability (future)
# SENTRY_DSN=your_sentry_dsn_here
# METRICS_ENDPOINT=http://prometheus:9090

# Development Tools
# Set to true to enable development features
ENABLE_CORS=true
ENABLE_VERBOSE_LOGGING=false

# EGP Protocol Configuration
# Protocol version this node implements
PROTOCOL_VERSION=0.1.0-alpha

# Maximum proposal sunset duration (ISO 8601 duration)
MAX_SUNSET_DURATION=P2Y

# Governance features
ENABLE_CULTURAL_PROTOCOLS=true
ENABLE_CONFLICT_DETECTION=true
ENABLE_LEARNING_ARCHIVE=true
